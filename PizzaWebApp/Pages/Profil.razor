@page "/Profil"
@using System.Globalization
<link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
<link href="css/Profil.css" rel="stylesheet" />


<header class="navbar">
    <div class="logo">
        <img src="images/logo.svg" alt="Luigi's Pizza" />
        <span>Luigi’s Pizza</span>
    </div>
    <nav class="nav-buttons">
        <button class="nav-btn">Новые</button>
        <button class="nav-btn active">Текущие</button>
        <button class="nav-btn">Выполненные</button>
    </nav>
    <button class="login-btn">Войти</button>
</header>

<h2 class="section-title">Текущие заказы</h2>

<div class="orders-container">
    <div class="orders-grid">
        @for (int i = 0; i < 9; i++)
        {
            <div class="order-card">
                <div class="pizza-image"></div>
                <div class="order-content">
                    <h3>ЗАКАЗ A4D13</h3>
                    <p>Пицца маргарита</p>
                    <ul>
                        <li>Состав:</li>
                        <li>• Базилик</li>
                        <li>• Моцарелла</li>
                        <li>• Соус красный</li>
                    </ul>
                    <p>Детали:<br />• до 15:00</p>
                    <div class="btn-container">
                        <button class="ready-btn">Готово</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<footer class="footer">
    <div class="footer-left">
        <img src="images/logo.svg" alt="Luigi's Pizza" />
        <span>Luigi’s Pizza</span>
    </div>
    <div class="footer-right">@DateTime.Now.ToString("HH:mm", CultureInfo.InvariantCulture)</div>
</footer>

<link href="css/orders.css" rel="stylesheet" />
