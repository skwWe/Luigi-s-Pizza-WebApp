                style="margin-top: 8px; display: flex; align-items: center; gap: 8px;">
                    <input type="text"
                    @bind="TempFirstName"
                    @ref="nameInput"
                    placeholder="Введите новое имя"
                    style="flex-grow: 1; padding: 6px; font-size: 1rem; border: 1px solid #666; border-radius: 4px;" />

                    <button @onclick="SaveName"
